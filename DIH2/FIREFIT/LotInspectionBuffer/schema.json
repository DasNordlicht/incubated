{
    "$schema": "http://json-schema.org/firefit/lotInspectionBufferSchema",
    "$id": "https://github.com/smart-data-models/incubated/tree/master/DIH2/FIREFIT/LotInspectionBufferSchema/schema.json",
    "title": "Lot Inspection Buffer",
    "description": "A buffer entity used to register the results of a lot of 6 objects subject to an inspection process that relies on a single image",
    "type": "object",
    "properties": {
        "id": {
            "description": "Buffer unique identifier",
            "type": "string"
        },
        "type": {
            "description": "Buffer type",
            "type": "string"
        },
        "inspection": {
            "description":"Lot inspection results",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Inspection type",
                    "type": "string"
                },
                "value": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "description": "Inspection unique identifier",
                            "type": "string"
                        },
                        "image": {
                            "description": "Inspection encoded image result",
                            "type": "string"
                        },
                        "packages": {
                            "description": "Inspection results for each object",
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "First object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "First object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "Second object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "Second object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "Third object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "Third object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "Fourth object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "Fourth object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "Fifth object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "Fifth object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "description": "Sixth object unique identifier",
                                            "type": "string"
                                        },
                                        "inspection": {
                                            "description": "Sixth object inspection result",
                                            "type": "boolean"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "inspection"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "id",
                        "image",
                        "packages"
                    ]
                }
            },
            "required": [
                "type",
                "value"
            ]
        }
    },
    "required": [
        "id",
        "type",
        "inspection"
    ]
}